    {
        0 => "C",
        1 => "C♯/D♭",
        2 => "D",
        3 => "D♯/E♭",
        4 => "E",
        5 => "F",
        6 => "F♯/G♭",
        7 => "G",
        8 => "G♯/A♭",
        9 => "A",
        10 => "A♯/B♭",
        11 => "B",
        _ => "Unknown"
    };

    private int GetMatchingTracksCount() => _tracks.Count(SelectedFilter.Matches);

    private List<Track> GetMatchingTracks() => _tracks.Where(SelectedFilter.Matches).ToList();

    private async Task CopyTracksToPlaylistAsync()
    {
        if (_isCopying || string.IsNullOrWhiteSpace(_destinationPlaylistName))
        {
            return;
        }

        List<Track> matchingTracks = GetMatchingTracks();

        if (matchingTracks.Count == 0)
        {
            _copyStatusMessage = "No tracks match the selected filter.";
            _copyStatusIsError = true;
            return;
        }

        try
        {
            _isCopying = true;
            _copyStatusMessage = string.Empty;
            StateHasChanged();

            // Get or create the destination playlist
            Playlist destinationPlaylist = await SpotifyPlaylistService.GetOrCreatePlaylistAsync(
                name: _destinationPlaylistName.Trim(),
                description: $"Tracks filtered by: {SelectedFilter.Name}");

            // Convert track IDs to Spotify URIs
            IEnumerable<string> trackUris = matchingTracks.Select(t => t.ToSpotifyUri());

            // Add tracks to playlist
            await SpotifyPlaylistService.AddTracksToPlaylistAsync(destinationPlaylist.Id, trackUris);

            _copyStatusMessage = $"Successfully copied {matchingTracks.Count} tracks to '{destinationPlaylist.Name}'.";
            _copyStatusIsError = false;
        }
        catch (Exception ex)
        {
            _copyStatusMessage = $"Error copying tracks: {ex.Message}";
            _copyStatusIsError = true;
        }
        finally
        {
            _isCopying = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _cancellationTokenSource?.Cancel();
        _cancellationTokenSource?.Dispose();
    }
