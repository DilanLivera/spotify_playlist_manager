@page "/playlist/{PlaylistId}"
@using UI.Features.PlaylistDetails
@using UI.Features.Shared.Domain
@using UI.Infrastructure.Spotify
@inject SpotifyPlaylistService SpotifyPlaylistService
@inject SpotifyTrackService SpotifyTrackService
@inject SpotifyAuthSessionManager SpotifyAuthSessionManager
@inject NavigationManager NavigationManager
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>Playlist Details</PageTitle>

<div class="p-8">
    <div class="max-w-7xl mx-auto">
        <div class="mb-6">
            <a href="/"
               class="text-gray-400 hover:text-gray-300 flex items-center">
                <svg class="w-5 h-5 mr-1"
                     fill="none"
                     stroke="currentColor"
                     viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 19l-7-7 7-7"/>
                </svg>
                Back to Playlists
            </a>
        </div>

        @if (_playlist != null)
        {
            <div class="mb-8">
                <div class="flex items-start gap-6">
                    @if (!string.IsNullOrEmpty(_playlist.ImageUrl))
                    {
                        <img src="@_playlist.ImageUrl"
                             alt="@_playlist.Name"
                             class="w-24 h-24 object-cover rounded-lg shadow-lg"/>
                    }
                    else
                    {
                        <div class="w-24 h-24 bg-gray-800 rounded-lg shadow-lg flex items-center justify-center">
                            <svg class="w-10 h-10 text-gray-600"
                                 fill="currentColor"
                                 viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
                            </svg>
                        </div>
                    }
                    <div>
                        <h1 class="text-3xl font-bold text-white mb-2">@_playlist.Name</h1>
                        <p class="text-gray-400 mb-4">
                            @(!string.IsNullOrEmpty(_playlist.Description) ? _playlist.Description : "No description")
                        </p>
                        <div class="flex items-center text-gray-500 text-sm">
                            <svg class="w-4 h-4 mr-1"
                                 fill="currentColor"
                                 viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"/>
                            </svg>
                            @_playlist.TrackCount tracks
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="mb-8">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <h1 class="text-3xl font-bold text-white">
                    @if (_sortingBy == SortingOption.Genre)
                    {
                        <span>Sorted by Genre</span>
                    }
                    else
                    {
                        <span>Sorted by Decade</span>
                    }
                </h1>
                <div class="flex gap-3">
                    <div class="bg-[#1A1E2A] p-1 rounded-full shadow-lg">
                        <button type="button"
                                @onclick="() => SetSortingOption(SortingOption.Genre)"
                                class="@GetSortingButtonClass(SortingOption.Genre)">
                            <svg class="w-4 h-4 mr-1 inline"
                                 fill="currentColor"
                                 viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <span>Genre</span>
                        </button>
                        <button type="button"
                                @onclick="() => SetSortingOption(SortingOption.Decade)"
                                class="@GetSortingButtonClass(SortingOption.Decade)">
                            <svg class="w-4 h-4 mr-1 inline"
                                 fill="currentColor"
                                 viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                      clip-rule="evenodd"/>
                            </svg>
                            <span>Decade</span>
                        </button>
                    </div>
                    <button type="button"
                            @onclick="ToggleView"
                            class="text-white bg-gradient-to-r from-green-600 to-emerald-500 hover:bg-gradient-to-l focus:ring-2 focus:ring-green-400 font-medium rounded-full text-sm px-5 py-2.5 text-center inline-flex items-center shadow-lg transition-all duration-200">
                        @if (_showCompactView)
                        {
                            <svg class="w-4 h-4 mr-1"
                                 fill="currentColor"
                                 viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                                <path fill-rule="evenodd"
                                      d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
                                      clip-rule="evenodd"/>
                            </svg>
                            <span>Details</span>
                        }
                        else
                        {
                            <svg class="w-4 h-4 mr-1"
                                 fill="currentColor"
                                 viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                                <path fill-rule="evenodd"
                                      d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z"
                                      clip-rule="evenodd"/>
                            </svg>
                            <span>Compact</span>
                        }
                    </button>
                </div>
            </div>
            <p class="text-gray-400 mt-2">
                @if (_isLoading)
                {
                    <div class="flex items-center justify-between flex-wrap gap-2">
                        <span class="flex items-center">
                            <div class="animate-spin rounded-full h-4 w-4 mr-2 border-t-2 border-b-2 border-green-500"></div>
                            Loading tracks... (@_tracks.Count of @(_playlist?.TrackCount ?? 0) loaded, @((_playlist?.TrackCount ?? 0) - _tracks.Count) remaining)
                        </span>
                    </div>
                }
                else
                {
                    <span>All @_tracks.Count tracks loaded in @_groupedTracks.Count @(_sortingBy == SortingOption.Genre ? "genres" : "decades")</span>
                }
            </p>
        </div>

        @* Copy to Playlist Section *@
        <div class="mb-8 bg-[#232a3b] rounded-lg p-6 shadow-lg">
            <h3 class="text-xl font-semibold text-white mb-4">Copy Tracks to Playlist</h3>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 items-end">
                @* Year Range Inputs *@
                <div>
                    <label class="block text-gray-400 text-sm mb-2" for="start-year-input">Start Year</label>
                    <input type="number"
                           id="start-year-input"
                           @bind-value="_startYear"
                           @bind-value:event="oninput"
                           @onchange="OnYearRangeChanged"
                           placeholder="e.g., 2000"
                           class="w-full bg-[#1A1E2A] text-white border border-gray-600 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-green-500 focus:border-transparent placeholder-gray-500"/>
                </div>
                <div>
                    <label class="block text-gray-400 text-sm mb-2" for="end-year-input">End Year (Optional)</label>
                    <input type="number"
                           id="end-year-input"
                           @bind-value="_endYear"
                           @bind-value:event="oninput"
                           @onchange="OnYearRangeChanged"
                           placeholder="Current Year"
                           class="w-full bg-[#1A1E2A] text-white border border-gray-600 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-green-500 focus:border-transparent placeholder-gray-500"/>
                </div>

                @* Destination Playlist Name *@
                <div>
                    <label class="block text-gray-400 text-sm mb-2">Destination Playlist</label>
                    <input type="text"
                           @bind="_destinationPlaylistName"
                           placeholder="Enter playlist name"
                           class="w-full bg-[#1A1E2A] text-white border border-gray-600 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-green-500 focus:border-transparent placeholder-gray-500"/>
                </div>

                @* Matching Tracks Count *@
                <div>
                    <label class="block text-gray-400 text-sm mb-2">Matching Tracks</label>
                    <div class="bg-[#1A1E2A] text-white border border-gray-600 rounded-lg px-4 py-2.5">
                        <span class="text-green-400 font-semibold">@GetMatchingTracksCount()</span>
                        <span class="text-gray-400"> of @_tracks.Count</span>
                    </div>
                </div>

                @* Copy Button *@
                <div>
                    <button type="button"
                            @onclick="CopyTracksToPlaylistAsync"
                            disabled="@(_isCopying || GetMatchingTracksCount() == 0 || string.IsNullOrWhiteSpace(_destinationPlaylistName))"
                            class="w-full text-white bg-gradient-to-r from-green-600 to-emerald-500 hover:bg-gradient-to-l focus:ring-2 focus:ring-green-400 font-medium rounded-lg text-sm px-5 py-2.5 m-1 text-center inline-flex items-center justify-center shadow-lg transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
                        @if (_isCopying)
                        {
                            <div class="animate-spin rounded-full h-4 w-4 mr-2 border-t-2 border-b-2 border-white"></div>
                            <span>Copying...</span>
                        }
                        else
                        {
                            <svg class="w-4 h-4 mr-2"
                                 fill="currentColor"
                                 viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M8 2a1 1 0 000 2h2a1 1 0 100-2H8z"/>
                                <path d="M3 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v6h-4.586l1.293-1.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L10.414 13H15v3a2 2 0 01-2 2H5a2 2 0 01-2-2V5zM15 11h2a1 1 0 110 2h-2v-2z"/>
                            </svg>
                            <span>Copy to Playlist</span>
                        }
                    </button>
                </div>
            </div>

            @* Status Message *@
            @if (!string.IsNullOrEmpty(_copyStatusMessage))
            {
                <div class="mt-4 p-3 rounded-lg @(_copyStatusIsError ? "bg-red-900/50 text-red-300" : "bg-green-900/50 text-green-300")">
                    @_copyStatusMessage
                </div>
            }
        </div>

        <div class="space-y-6">
            @if (_isLoading)
            {
                @for (int i = 0; i < 3; i++)
                {
                    <div class="bg-[#232a3b] rounded-lg shadow-lg overflow-hidden animate-pulse">
                        <div class="bg-[#2c3549] p-4">
                            <div class="h-6 bg-gray-700 rounded w-1/4"></div>
                        </div>
                        <div class="p-4">
                            <div class="overflow-x-auto">
                                <table class="w-full">
                                    <thead class="text-left text-gray-400 border-b border-gray-700">
                                    <tr>
                                        <th class="pb-2 font-medium">#</th>
                                        @if (!_showCompactView)
                                        {
                                            <th class="pb-2 font-medium">Cover</th>
                                        }
                                        <th class="pb-2 font-medium">Title</th>
                                        <th class="pb-2 font-medium">Artist</th>
                                            @if (!_showCompactView)
                                            {
                                                <th class="pb-2 font-medium">Album</th>
                                                <th class="pb-2 font-medium">Release Date</th>
                                                <th class="pb-2 font-medium">Mood</th>
                                            }
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @for (int j = 0; j < 5; j++)
                                    {
                                        <tr class="border-b border-gray-700/50">
                                            <td class="py-3 text-gray-400">@(j + 1)</td>
                                            @if (!_showCompactView)
                                            {
                                                <td class="py-3">
                                                    <div class="w-10 h-10 rounded bg-gray-700"></div>
                                                </td>
                                            }
                                            <td class="py-3">
                                                <div class="h-4 bg-gray-700 rounded w-3/4"></div>
                                            </td>
                                            <td class="py-3">
                                                <div class="h-4 bg-gray-700 rounded w-1/2"></div>
                                            </td>
                                            @if (!_showCompactView)
                                            {
                                                <td class="py-3">
                                                    <div class="h-4 bg-gray-700 rounded w-2/3"></div>
                                                </td>
                                                <td class="py-3">
                                                    <div class="h-4 bg-gray-700 rounded w-20"></div>
                                                </td>
                                                <td class="py-3">
                                                    <div class="h-6 bg-gray-700 rounded-full w-24"></div>
                                                </td>
                                            }
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                @foreach (string? key in _groupedTracks.Keys)
                {
                    <div class="bg-[#232a3b] rounded-lg shadow-lg overflow-hidden">
                        <div class="bg-[#2c3549] p-4">
                            <div class="flex justify-between items-center">
                                <h2 class="text-xl font-semibold text-white">
                                    @key (@_groupedTracks[key].Count tracks)
                                </h2>
                                <button @onclick="() => ToggleSectionCollapse(key)"
                                        class="text-gray-300 hover:text-white p-1 rounded-full hover:bg-gray-700/30 transition-colors">
                                    @if (IsSectionCollapsed(key))
                                    {
                                        <svg class="w-5 h-5"
                                             fill="currentColor"
                                             viewBox="0 0 20 20"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd"
                                                  d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                                                  clip-rule="evenodd"/>
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="w-5 h-5"
                                             fill="currentColor"
                                             viewBox="0 0 20 20"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd"
                                                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                                  clip-rule="evenodd"/>
                                        </svg>
                                    }
                                </button>
                            </div>
                        </div>
                        @if (!IsSectionCollapsed(key))
                        {
                            <div class="p-4">
                                <div class="overflow-x-auto">
                                    <table class="w-full">
                                        <thead class="text-left text-gray-400 border-b border-gray-700">
                                        <tr>
                                            <th class="pb-2 font-medium">#</th>
                                            @if (!_showCompactView)
                                            {
                                                <th class="pb-2 font-medium">Cover</th>
                                            }
                                            <th class="pb-2 font-medium">Title</th>
                                            <th class="pb-2 font-medium">Artist</th>
                                            @if (!_showCompactView)
                                            {
                                                <th class="pb-2 font-medium">Album</th>
                                                <th class="pb-2 font-medium">Release Date</th>
                                                <th class="pb-2 font-medium">Mood</th>
                                            }
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @{
                                            int trackNumber = 1;
                                        }
                                        @foreach (Track? track in _groupedTracks[key])
                                        {
                                            <tr class="hover:bg-gray-800/30 border-b border-gray-700/50">
                                                <td class="py-3 text-gray-400">@trackNumber</td>
                                                @if (!_showCompactView)
                                                {
                                                    <td class="py-3">
                                                        @if (!string.IsNullOrEmpty(track.Album.ImageUrl))
                                                        {
                                                            <img src="@track.Album.ImageUrl"
                                                                 alt="@track.Album.Name"
                                                                 class="w-10 h-10 rounded"/>
                                                        }
                                                        else
                                                        {
                                                            <div class="w-10 h-10 rounded bg-gray-700 flex items-center justify-center">
                                                                <svg class="w-6 h-6 text-gray-500"
                                                                     fill="currentColor"
                                                                     viewBox="0 0 20 20"
                                                                     xmlns="http://www.w3.org/2000/svg">
                                                                    <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
                                                                </svg>
                                                            </div>
                                                        }
                                                    </td>
                                                }
                                                <td class="py-3 text-white font-medium">@track.Name</td>
                                                <td class="py-3 text-gray-400">@track.GetArtistDisplay()</td>
                                                @if (!_showCompactView)
                                                {
                                                    <td class="py-3 text-gray-400">@track.Album?.Name</td>
                                                    <td class="py-3 text-gray-400">@track.Album?.ReleaseDate</td>
                                                    <td class="py-3">
                                                        <span class="px-2 py-1 rounded-full text-xs font-semibold @GetMoodClass(track.GetMood())">
                                                            @track.GetMood()
                                                        </span>
                                                    </td>
                                                }
                                            </tr>
                                            trackNumber++;
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {

    private enum SortingOption {
        Genre,
        Decade
    }

    [Parameter]
    public string PlaylistId { get; set; } = string.Empty;

    private readonly List<Track> _tracks = [];
    private Dictionary<string, List<Track>> _groupedTracks = [];
    private bool _isLoading = true;
    private bool _showCompactView = false;
    private SortingOption _sortingBy = SortingOption.Genre;
    private int _offset = 0;
    private const int BatchSize = 100;
    private bool _loadingMore = false;
    private bool _hasMoreTracks = true;
    private readonly HashSet<string> _collapsedSections = [];
    private Playlist? _playlist;
    private CancellationTokenSource? _cancellationTokenSource;

    // Custom Year Range Filter
    private int? _startYear = 2000;
    private int? _endYear = null; // Represents 'up to current year' if null

    // Filter and copy-to-playlist state
    private string _destinationPlaylistName = string.Empty;
    private bool _isCopying = false;
    private string _copyStatusMessage = string.Empty;
    private bool _copyStatusIsError = false;

    private ITrackFilter SelectedFilter => new YearRangeFilter(minYear: _startYear ?? 1900, maxYear: _endYear ?? DateTime.Now.Year);

    protected override void OnInitialized()
    {
        _groupedTracks = new Dictionary<string, List<Track>>();
        _destinationPlaylistName = SelectedFilter.SuggestedPlaylistName;
        _cancellationTokenSource = new CancellationTokenSource();

        if (!SpotifyAuthSessionManager.IsAuthenticated())
        {
            NavigationManager.NavigateTo(uri: "/spotify-auth");
        }
    }

    private void OnYearRangeChanged()
    {
        // This method is called when start or end year inputs change.
        // The SelectedFilter computed property will automatically create a new YearRangeFilter.
        _destinationPlaylistName = SelectedFilter.SuggestedPlaylistName;
        _copyStatusMessage = string.Empty;
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadPlaylistTracksAsync();
        }
    }

    private async Task LoadPlaylistTracksAsync()
    {
        try
        {
            _playlist = await SpotifyPlaylistService.GetPlaylistAsync(PlaylistId);

            await LoadAllTracksInBackgroundAsync();
        }
        catch (OperationCanceledException)
        {
            // Track loading was cancelled, this is expected when navigating away
        }
        catch (Exception)
        {
            _isLoading = false;
            StateHasChanged();

            throw;
        }
    }

    private async Task LoadAllTracksInBackgroundAsync()
    {
        try
        {
            while (_hasMoreTracks && !_cancellationTokenSource!.Token.IsCancellationRequested)
            {
                await FetchMoreTracksAsync();
            }

            _isLoading = false;
            StateHasChanged();
        }
        catch (OperationCanceledException)
        {
            _isLoading = false;
            throw;
        }
    }

    private async Task FetchMoreTracksAsync()
    {
        if (_loadingMore || !_hasMoreTracks) return;

        try
        {
            _loadingMore = true;
            StateHasChanged();

            IReadOnlyList<Track> newTracks = await SpotifyTrackService.GetPlaylistTracksAsync(PlaylistId, _offset, BatchSize, _cancellationTokenSource!.Token);

            if (newTracks.Count > 0)
            {
                _tracks.AddRange(newTracks);

                _offset += newTracks.Count;

                _hasMoreTracks = newTracks.Count == BatchSize;

                GroupTracks();
            }
            else
            {
                _hasMoreTracks = false;
            }
        }
        finally
        {
            _loadingMore = false;
            StateHasChanged();
        }
    }

    private void SetSortingOption(SortingOption option)
    {
        if (_sortingBy != option)
        {
            _sortingBy = option;
            GroupTracks();
        }
    }

    private void GroupTracks()
    {
        if (_sortingBy == SortingOption.Genre)
        {
            _groupedTracks = _tracks.GroupBy(t => t.Genre)
                                    .ToDictionary(g => g.Key, g => g.ToList());
        }
        else
        {
            _groupedTracks = _tracks.GroupBy(t => t.GetDecade())
                                    .OrderBy(g => g.Key)
                                    .ToDictionary(g => g.Key, g => g.ToList());
        }
    }

    private string GetSortingButtonClass(SortingOption option)
    {
        const string baseClass = "px-4 py-2 text-sm font-medium transition-all duration-200";
        const string activeClass = "bg-green-600 text-white rounded-full shadow-inner";
        const string inactiveClass = "bg-transparent text-gray-300 hover:text-white";

        return $"{baseClass} {(_sortingBy == option ? activeClass : inactiveClass)}";
    }

    private void ToggleView() => _showCompactView = !_showCompactView;

    private void ToggleSectionCollapse(string key)
    {
        if (!_collapsedSections.Add(key))
        {
            _collapsedSections.Remove(key);
        }
    }

    private bool IsSectionCollapsed(string key) => _collapsedSections.Contains(key);

    private string GetMoodClass(string mood) => mood switch
    {
        "Upbeat/Happy" => "bg-yellow-900/50 text-yellow-300",
