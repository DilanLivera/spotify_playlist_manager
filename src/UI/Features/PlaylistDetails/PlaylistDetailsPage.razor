@page "/playlist/{PlaylistId}"
@using UI.Features.Shared.Domain
@using UI.Features.PlaylistDetails.Components
@using UI.Infrastructure.Spotify
@using UI.Infrastructure.AIAgent
@inject SpotifyPlaylistService SpotifyPlaylistService
@inject SpotifyTrackService SpotifyTrackService
@inject SpotifyAuthSessionManager SpotifyAuthSessionManager
@inject NavigationManager NavigationManager
@inject AITrackFilterService AITrackFilterService
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>Playlist Details</PageTitle>

<div class="p-8">
    <div class="max-w-7xl mx-auto">
        <div class="mb-6">
            <a href="/"
               class="text-gray-400 hover:text-gray-300 flex items-center">
                <svg class="w-5 h-5 mr-1"
                     fill="none"
                     stroke="currentColor"
                     viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 19l-7-7 7-7"/>
                </svg>
                Back to Playlists
            </a>
        </div>

        <PlaylistHeader Playlist="_playlist" />

        <TrackSortingControls SortingBy="_sortingBy"
                              ShowCompactView="_showCompactView"
                              IsLoading="_isLoading"
                              LoadedCount="_tracks.Count"
                              TotalCount="@(_playlist?.TrackCount ?? 0)"
                              GroupCount="_groupedTracks.Count"
                              OnSortingChanged="SetSortingOption"
                              OnViewToggle="ToggleView" />

        @* AI-Powered Track Filtering Section *@
        <div class="mb-8 bg-[#232a3b] rounded-lg p-6 shadow-lg">
            <h3 class="text-xl font-semibold text-white mb-4 flex items-center">
                <svg class="w-6 h-6 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
                AI-Powered Track Filtering
            </h3>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
                @* AI Prompt Input *@
                <div class="lg:col-span-2">
                    <label class="block text-gray-400 text-sm mb-2" for="ai-prompt-input">
                        Describe the tracks you want (e.g., "upbeat songs from the 2000s", "chill acoustic tracks")
                    </label>
                    <div class="flex gap-2">
                        <input type="text"
                               id="ai-prompt-input"
                               @bind="_aiPrompt"
                               @bind:event="oninput"
                               @onkeydown="HandleAIPromptKeyDown"
                               placeholder="Type your filtering criteria..."
                               disabled="@(_isAIFiltering || _isLoading)"
                               class="flex-1 bg-[#1A1E2A] text-white border border-gray-600 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-green-500 focus:border-transparent placeholder-gray-500 disabled:opacity-50 disabled:cursor-not-allowed"/>
                        <button type="button"
                                @onclick="ApplyAIFilterAsync"
                                disabled="@(_isAIFiltering || _isLoading || string.IsNullOrWhiteSpace(_aiPrompt))"
                                class="text-white bg-gradient-to-r from-purple-600 to-indigo-500 hover:bg-gradient-to-l focus:ring-2 focus:ring-purple-400 font-medium rounded-lg text-sm px-6 py-2.5 text-center inline-flex items-center justify-center shadow-lg transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed whitespace-nowrap">
                            @if (_isAIFiltering)
                            {
                                <div class="animate-spin rounded-full h-4 w-4 mr-2 border-t-2 border-b-2 border-white"></div>
                                <span>Filtering...</span>
                            }
                            else
                            {
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                                <span>Filter</span>
                            }
                        </button>
                    </div>
                    @if (_isAIFiltering)
                    {
                        <div class="mt-2 text-sm text-gray-400 flex items-center">
                            <svg class="animate-spin h-4 w-4 mr-2 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            AI is analyzing @_tracks.Count tracks... This may take a moment.
                        </div>
                    }
                </div>

                @* Matching Tracks Count *@
                <div>
                    <label class="block text-gray-400 text-sm mb-2">Matching Tracks</label>
                    <div class="bg-[#1A1E2A] text-white border border-gray-600 rounded-lg px-4 py-2.5 h-[50px] flex items-center justify-center">
                        <span class="text-green-400 font-semibold text-lg">@GetMatchingTracksCount()</span>
                        <span class="text-gray-400 ml-2">of @_tracks.Count</span>
                    </div>
                </div>
            </div>

            @* Destination Playlist and Copy Section *@
            @if (_currentFilter != null && GetMatchingTracksCount() > 0)
            {
                <div class="mt-4 p-4 bg-[#1A1E2A] rounded-lg border border-gray-700">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 items-end">
                        <div>
                            <label class="block text-gray-400 text-sm mb-2">Destination Playlist</label>
                            <input type="text"
                                   @bind="_destinationPlaylistName"
                                   placeholder="Enter playlist name"
                                   disabled="@_isCopying"
                                   class="w-full bg-[#232a3b] text-white border border-gray-600 rounded-lg px-4 py-2.5 focus:ring-2 focus:ring-green-500 focus:border-transparent placeholder-gray-500 disabled:opacity-50 disabled:cursor-not-allowed"/>
                        </div>
                        <div>
                            <button type="button"
                                    @onclick="CopyTracksToPlaylistAsync"
                                    disabled="@(_isCopying || string.IsNullOrWhiteSpace(_destinationPlaylistName))"
                                    class="w-full text-white bg-gradient-to-r from-green-600 to-emerald-500 hover:bg-gradient-to-l focus:ring-2 focus:ring-green-400 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center justify-center shadow-lg transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
                                @if (_isCopying)
                                {
                                    <div class="animate-spin rounded-full h-4 w-4 mr-2 border-t-2 border-b-2 border-white"></div>
                                    <span>Copying...</span>
                                }
                                else
                                {
                                    <svg class="w-4 h-4 mr-2"
                                         fill="currentColor"
                                         viewBox="0 0 20 20"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path d="M8 2a1 1 0 000 2h2a1 1 0 100-2H8z"/>
                                        <path d="M3 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v6h-4.586l1.293-1.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L10.414 13H15v3a2 2 0 01-2 2H5a2 2 0 01-2-2V5zM15 11h2a1 1 0 110 2h-2v-2z"/>
                                    </svg>
                                    <span>Copy to Playlist</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            }

            @* Status Message *@
            @if (!string.IsNullOrEmpty(_copyStatusMessage))
            {
                <div class="mt-4 p-3 rounded-lg @(_copyStatusIsError ? "bg-red-900/50 text-red-300" : "bg-green-900/50 text-green-300")">
                    @_copyStatusMessage
                </div>
            }
        </div>

        <div class="space-y-6">
            @if (_isLoading)
            {
                @for (int i = 0; i < 3; i++)
                {
                    <div class="bg-[#232a3b] rounded-lg shadow-lg overflow-hidden animate-pulse">
                        <div class="bg-[#2c3549] p-4">
                            <div class="h-6 bg-gray-700 rounded w-1/4"></div>
                        </div>
                        <div class="p-4">
                            <div class="overflow-x-auto">
                                <table class="w-full">
                                    <thead class="text-left text-gray-400 border-b border-gray-700">
                                    <tr>
                                        <th class="pb-2 font-medium">#</th>
                                        @if (!_showCompactView)
                                        {
                                            <th class="pb-2 font-medium">Cover</th>
                                        }
                                        <th class="pb-2 font-medium">Title</th>
                                        <th class="pb-2 font-medium">Artist</th>
                                        @if (!_showCompactView)
                                        {
                                            <th class="pb-2 font-medium">Album</th>
                                            <th class="pb-2 font-medium">Release Date</th>
                                            <th class="pb-2 font-medium">Mood</th>
                                        }
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @for (int j = 0; j < 5; j++)
                                    {
                                        <tr class="border-b border-gray-700/50">
                                            <td class="py-3 text-gray-400">@(j + 1)</td>
                                            @if (!_showCompactView)
                                            {
                                                <td class="py-3">
                                                    <div class="w-10 h-10 rounded bg-gray-700"></div>
                                                </td>
                                            }
                                            <td class="py-3">
                                                <div class="h-4 bg-gray-700 rounded w-3/4"></div>
                                            </td>
                                            <td class="py-3">
                                                <div class="h-4 bg-gray-700 rounded w-1/2"></div>
                                            </td>
                                            @if (!_showCompactView)
                                            {
                                                <td class="py-3">
                                                    <div class="h-4 bg-gray-700 rounded w-2/3"></div>
                                                </td>
                                                <td class="py-3">
                                                    <div class="h-4 bg-gray-700 rounded w-20"></div>
                                                </td>
                                                <td class="py-3">
                                                    <div class="h-6 bg-gray-700 rounded-full w-24"></div>
                                                </td>
                                            }
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                @foreach (string? key in _groupedTracks.Keys)
                {
                    <div class="bg-[#232a3b] rounded-lg shadow-lg overflow-hidden">
                        <div class="bg-[#2c3549] p-4">
                            <div class="flex justify-between items-center">
                                <h2 class="text-xl font-semibold text-white">
                                    @key (@_groupedTracks[key].Count tracks)
                                </h2>
                                <button @onclick="() => ToggleSectionCollapse(key)"
                                        class="text-gray-300 hover:text-white p-1 rounded-full hover:bg-gray-700/30 transition-colors">
                                    @if (IsSectionCollapsed(key))
                                    {
                                        <svg class="w-5 h-5"
                                             fill="currentColor"
                                             viewBox="0 0 20 20"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd"
                                                  d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                                                  clip-rule="evenodd"/>
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="w-5 h-5"
                                             fill="currentColor"
                                             viewBox="0 0 20 20"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd"
                                                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                                  clip-rule="evenodd"/>
                                        </svg>
                                    }
                                </button>
                            </div>
                        </div>
                        @if (!IsSectionCollapsed(key))
                        {
                            <div class="p-4">
                                <div class="overflow-x-auto">
                                    <table class="w-full">
                                        <thead class="text-left text-gray-400 border-b border-gray-700">
                                        <tr>
                                            <th class="pb-2 font-medium">#</th>
                                            @if (!_showCompactView)
                                            {
                                                <th class="pb-2 font-medium">Cover</th>
                                            }
                                            <th class="pb-2 font-medium">Title</th>
                                            <th class="pb-2 font-medium">Artist</th>
                                            @if (!_showCompactView)
                                            {
                                                <th class="pb-2 font-medium">Album</th>
                                                <th class="pb-2 font-medium">Release Date</th>
                                                <th class="pb-2 font-medium">Mood</th>
                                            }
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @{
                                            int trackNumber = 1;
                                        }
                                        @foreach (Track? track in _groupedTracks[key])
                                        {
                                            <tr class="hover:bg-gray-800/30 border-b border-gray-700/50">
                                                <td class="py-3 text-gray-400">@trackNumber</td>
                                                @if (!_showCompactView)
                                                {
                                                    <td class="py-3">
                                                        @if (!string.IsNullOrEmpty(track.Album.ImageUrl))
                                                        {
                                                            <img src="@track.Album.ImageUrl"
                                                                 alt="@track.Album.Name"
                                                                 class="w-10 h-10 rounded"/>
                                                        }
                                                        else
                                                        {
                                                            <div class="w-10 h-10 rounded bg-gray-700 flex items-center justify-center">
                                                                <svg class="w-6 h-6 text-gray-500"
                                                                     fill="currentColor"
                                                                     viewBox="0 0 20 20"
                                                                     xmlns="http://www.w3.org/2000/svg">
                                                                    <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
                                                                </svg>
                                                            </div>
                                                        }
                                                    </td>
                                                }
                                                <td class="py-3 text-white font-medium">@track.Name</td>
                                                <td class="py-3 text-gray-400">@track.GetArtistDisplay()</td>
                                                @if (!_showCompactView)
                                                {
                                                    <td class="py-3 text-gray-400">@track.Album?.Name</td>
                                                    <td class="py-3 text-gray-400">@track.Album?.ReleaseDate</td>
                                                    <td class="py-3">
                                                        <span class="px-2 py-1 rounded-full text-xs font-semibold @GetMoodClass(track.GetMood())">
                                                            @track.GetMood()
                                                        </span>
                                                    </td>
                                                }
                                            </tr>
                                            trackNumber++;
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {

    [Parameter]
    public string PlaylistId { get; set; } = string.Empty;

    private readonly List<Track> _tracks = [];
    private Dictionary<string, List<Track>> _groupedTracks = [];
    private bool _isLoading = true;
    private bool _showCompactView = false;
    private SortingOption _sortingBy = SortingOption.Genre;
    private int _offset = 0;
    private const int BatchSize = 100;
    private bool _loadingMore = false;
    private bool _hasMoreTracks = true;
    private readonly HashSet<string> _collapsedSections = [];
    private Playlist? _playlist;
    private CancellationTokenSource? _cancellationTokenSource;

    // AI Filter state
    private string _aiPrompt = string.Empty;
    private bool _isAIFiltering = false;
    private ITrackFilter? _currentFilter = null;

    // Filter and copy-to-playlist state
    private string _destinationPlaylistName = string.Empty;
    private bool _isCopying = false;
    private string _copyStatusMessage = string.Empty;
    private bool _copyStatusIsError = false;

    protected override void OnInitialized()
    {
        _groupedTracks = new Dictionary<string, List<Track>>();
        _cancellationTokenSource = new CancellationTokenSource();

        if (!SpotifyAuthSessionManager.IsAuthenticated())
        {
            NavigationManager.NavigateTo(uri: "/spotify-auth");
        }
    }

    private async Task HandleAIPromptKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(_aiPrompt) && !_isAIFiltering && !_isLoading)
        {
            await ApplyAIFilterAsync();
        }
    }

    private async Task ApplyAIFilterAsync()
    {
        if (string.IsNullOrWhiteSpace(_aiPrompt) || _isAIFiltering || _isLoading)
        {
            return;
        }

        try
        {
            _isAIFiltering = true;
            _copyStatusMessage = string.Empty;
            _copyStatusIsError = false;
            StateHasChanged();

            // Create AI filter using the factory method
            _currentFilter = await AITrackFilter.CreateAsync(
                userPrompt: _aiPrompt,
                tracks: _tracks,
                aiService: AITrackFilterService,
                cancellationToken: _cancellationTokenSource!.Token);

            // Update destination playlist name with AI suggestion
            _destinationPlaylistName = _currentFilter.SuggestedPlaylistName;

            _copyStatusMessage = $"AI found {GetMatchingTracksCount()} matching tracks!";
            _copyStatusIsError = false;
        }
        catch (HttpRequestException)
        {
            _copyStatusMessage = "Error: Could not connect to Ollama. Please ensure Ollama is running on your machine.";
            _copyStatusIsError = true;
            _currentFilter = null;
        }
        catch (Exception ex)
        {
            _copyStatusMessage = $"Error applying AI filter: {ex.Message}";
            _copyStatusIsError = true;
            _currentFilter = null;
        }
        finally
        {
            _isAIFiltering = false;
            StateHasChanged();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadPlaylistTracksAsync();
        }
    }

    private async Task LoadPlaylistTracksAsync()
    {
        try
        {
            _playlist = await SpotifyPlaylistService.GetPlaylistAsync(PlaylistId);

            await LoadAllTracksInBackgroundAsync();
        }
        catch (OperationCanceledException)
        {
            // Track loading was cancelled, this is expected when navigating away
        }
        catch (Exception)
        {
            _isLoading = false;
            StateHasChanged();

            throw;
        }
    }

    private async Task LoadAllTracksInBackgroundAsync()
    {
        try
        {
            while (_hasMoreTracks && !_cancellationTokenSource!.Token.IsCancellationRequested)
            {
                await FetchMoreTracksAsync();
            }

            _isLoading = false;
            StateHasChanged();
        }
        catch (OperationCanceledException)
        {
            _isLoading = false;

            throw;
        }
    }

    private async Task FetchMoreTracksAsync()
    {
        if (_loadingMore || !_hasMoreTracks) return;

        try
        {
            _loadingMore = true;
            StateHasChanged();

            IReadOnlyList<Track> newTracks = await SpotifyTrackService.GetPlaylistTracksAsync(PlaylistId, _offset, BatchSize, _cancellationTokenSource!.Token);

            if (newTracks.Count > 0)
            {
                _tracks.AddRange(newTracks);

                _offset += newTracks.Count;

                _hasMoreTracks = newTracks.Count == BatchSize;

                GroupTracks();
            }
            else
            {
                _hasMoreTracks = false;
            }
        }
        finally
        {
            _loadingMore = false;
            StateHasChanged();
        }
    }

    private void SetSortingOption(SortingOption option)
    {
        if (_sortingBy != option)
        {
            _sortingBy = option;
            GroupTracks();
        }
    }

    private void GroupTracks()
    {
        if (_sortingBy == SortingOption.Genre)
        {
            _groupedTracks = _tracks.GroupBy(t => t.Genre)
                                    .ToDictionary(g => g.Key, g => g.ToList());
        }
        else
        {
            _groupedTracks = _tracks.GroupBy(t => t.GetDecade())
                                    .OrderBy(g => g.Key)
                                    .ToDictionary(g => g.Key, g => g.ToList());
        }
    }

    private void ToggleView() => _showCompactView = !_showCompactView;

    private void ToggleSectionCollapse(string key)
    {
        if (!_collapsedSections.Add(key))
        {
            _collapsedSections.Remove(key);
        }
    }

    private bool IsSectionCollapsed(string key) => _collapsedSections.Contains(key);

    private string GetMoodClass(string mood) => mood switch
    {
        "Upbeat/Happy" => "bg-yellow-900/50 text-yellow-300",
        "Chill/Calm" => "bg-blue-900/50 text-blue-300",
        "Sad/Gloomy" => "bg-indigo-900/50 text-indigo-300",
        "Angry/Aggressive" => "bg-red-900/50 text-red-300",
        _ => "bg-gray-800 text-gray-400"
    };

    private string GetMusicalKey(int key) => key switch
    {
        0 => "C",
        1 => "C♯/D♭",
        2 => "D",
        3 => "D♯/E♭",
        4 => "E",
        5 => "F",
        6 => "F♯/G♭",
        7 => "G",
        8 => "G♯/A♭",
        9 => "A",
        10 => "A♯/B♭",
        11 => "B",
        _ => "Unknown"
    };

    private int GetMatchingTracksCount() => _currentFilter == null ? 0 : _tracks.Count(_currentFilter.Matches);

    private List<Track> GetMatchingTracks() => _currentFilter == null ? [] : _tracks.Where(_currentFilter.Matches).ToList();

    private async Task CopyTracksToPlaylistAsync()
    {
        if (_isCopying || string.IsNullOrWhiteSpace(_destinationPlaylistName))
        {
            return;
        }

        List<Track> matchingTracks = GetMatchingTracks();

        if (matchingTracks.Count == 0)
        {
            _copyStatusMessage = "No tracks match the selected filter.";
            _copyStatusIsError = true;

            return;
        }

        try
        {
            _isCopying = true;
            _copyStatusMessage = string.Empty;
            StateHasChanged();

            // Get or create the destination playlist
            Playlist destinationPlaylist = await SpotifyPlaylistService.GetOrCreatePlaylistAsync(name: _destinationPlaylistName.Trim(),
                                                                                                 description: $"Tracks filtered by: {_currentFilter?.Name ?? "AI Filter"}");

            // Convert track IDs to Spotify URIs
            IEnumerable<string> trackUris = matchingTracks.Select(t => t.ToSpotifyUri());

            // Add tracks to playlist
            await SpotifyPlaylistService.AddTracksToPlaylistAsync(destinationPlaylist.Id, trackUris);

            _copyStatusMessage = $"Successfully copied {matchingTracks.Count} tracks to '{destinationPlaylist.Name}'.";
            _copyStatusIsError = false;
        }
        catch (Exception ex)
        {
            _copyStatusMessage = $"Error copying tracks: {ex.Message}";
            _copyStatusIsError = true;
        }
        finally
        {
            _isCopying = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _cancellationTokenSource?.Cancel();
        _cancellationTokenSource?.Dispose();
    }
}

