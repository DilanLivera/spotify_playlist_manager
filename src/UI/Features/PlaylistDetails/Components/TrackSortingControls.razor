<div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex gap-3">
            <div class="bg-[#1A1E2A] p-1 rounded-full shadow-lg">
                <button type="button"
                        @onclick="() => SetSorting(SortingOption.Genre)"
                        class="@GetSortingButtonClass(SortingOption.Genre)">
                    <svg class="w-4 h-4 mr-1 inline"
                         fill="currentColor"
                         viewBox="0 0 20 20"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    <span>Genre</span>
                </button>
                <button type="button"
                        @onclick="() => SetSorting(SortingOption.Decade)"
                        class="@GetSortingButtonClass(SortingOption.Decade)">
                    <svg class="w-4 h-4 mr-1 inline"
                         fill="currentColor"
                         viewBox="0 0 20 20"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                              clip-rule="evenodd"/>
                    </svg>
                    <span>Decade</span>
                </button>
            </div>
            <button type="button"
                    @onclick="ToggleView"
                    class="text-white bg-green-600 font-medium rounded-full text-sm px-5 m-1 text-center inline-flex items-center shadow-lg">
                @if (_showCompactView)
                {
                    <svg class="w-4 h-4 mr-1"
                         fill="currentColor"
                         viewBox="0 0 20 20"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                        <path fill-rule="evenodd"
                              d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
                              clip-rule="evenodd"/>
                    </svg>
                    <span>Details</span>
                }
                else
                {
                    <svg class="w-4 h-4 mr-1"
                         fill="currentColor"
                         viewBox="0 0 20 20"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                        <path fill-rule="evenodd"
                              d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z"
                              clip-rule="evenodd"/>
                    </svg>
                    <span>Compact</span>
                }
            </button>
        </div>
    </div>
    <p class="text-gray-400 mt-2">
        @if (IsLoading)
        {
            <div class="flex items-center justify-between flex-wrap gap-2">
                <span class="flex items-center">
                    <div class="animate-spin rounded-full h-4 w-4 mr-2 border-t-2 border-b-2 border-green-500"></div>
                    Loading tracks... (@LoadedCount of @TotalCount loaded, @(TotalCount - LoadedCount) remaining)
                </span>
            </div>
        }
    </p>
</div>

@code {
    private SortingOption _sortingBy = SortingOption.Genre;
    private bool _showCompactView = false;

    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public int LoadedCount { get; set; }

    [Parameter]
    public int TotalCount { get; set; }

    [Parameter]
    public int GroupCount { get; set; }

    [Parameter]
    public EventCallback<SortingOption> OnSortingChanged { get; set; }

    [Parameter]
    public EventCallback<bool> OnViewChanged { get; set; }

    public SortingOption CurrentSorting => _sortingBy;
    public bool IsCompactView => _showCompactView;

    private async Task SetSorting(SortingOption option)
    {
        if (_sortingBy != option)
        {
            _sortingBy = option;
            await OnSortingChanged.InvokeAsync(_sortingBy);
        }
    }

    private async Task ToggleView()
    {
        _showCompactView = !_showCompactView;
        await OnViewChanged.InvokeAsync(_showCompactView);
    }

    private string GetSortingButtonClass(SortingOption option)
    {
        const string baseClass = "px-4 py-2 text-sm font-medium transition-all duration-200";
        const string activeClass = "bg-green-600 text-white rounded-full shadow-inner";
        const string inactiveClass = "bg-transparent text-gray-300 hover:text-white";

        return $"{baseClass} {(_sortingBy == option ? activeClass : inactiveClass)}";
    }
}

