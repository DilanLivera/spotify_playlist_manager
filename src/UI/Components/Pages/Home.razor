@page "/"
@using UI.Infrastructure.Spotify
@inject SpotifyAuthSessionManager SpotifyAuthSessionManager
@inject NavigationManager NavigationManager

<PageTitle>Spotify Playlist Manager</PageTitle>

<div class="p-8">
    <div class="max-w-5xl mx-auto text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 outline-none">
            Spotify Playlist Manager
        </h1>
        <p class="text-xl text-gray-400 mb-8">
            Sort your Spotify playlists by genre and manage your music collection
        </p>

        @if (!SpotifyAuthSessionManager.IsAuthenticated())
        {
            <a href="/spotify-auth"
               class="bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-full">
                Connect to Spotify
            </a>
        }
        else
        {
            <a href="/playlists"
               class="bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-full">
                View My Playlists
            </a>
        }
    </div>

    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-[#232a3b] p-6 rounded-lg shadow-lg">
            <div class="text-green-500 text-4xl mb-4">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-12 w-12"
                     viewBox="0 0 20 20"
                     fill="currentColor">
                    <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
                </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">
                View Your Playlists
            </h3>
            <p class="text-gray-400">
                Browse all your Spotify playlists in one place
            </p>
        </div>

        <div class="bg-[#232a3b] p-6 rounded-lg shadow-lg">
            <div class="text-green-500 text-4xl mb-4">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-12 w-12"
                     viewBox="0 0 20 20"
                     fill="currentColor">
                    <path d="M5 4a1 1 0 00-2 0v7.268a2 2 0 000 3.464V16a1 1 0 102 0v-1.268a2 2 0 000-3.464V4zM11 4a1 1 0 10-2 0v1.268a2 2 0 000 3.464V16a1 1 0 102 0V8.732a2 2 0 000-3.464V4zM16 3a1 1 0 011 1v7.268a2 2 0 010 3.464V16a1 1 0 11-2 0v-1.268a2 2 0 010-3.464V4a1 1 0 011-1z"/>
                </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">
                Sort by Genre
            </h3>
            <p class="text-gray-400">
                Automatically organize tracks in your playlists by genre
            </p>
        </div>

        <div class="bg-[#232a3b] p-6 rounded-lg shadow-lg">
            <div class="text-green-500 text-4xl mb-4">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-12 w-12"
                     viewBox="0 0 20 20"
                     fill="currentColor">
                    <path fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                          clip-rule="evenodd"/>
                </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">
                Save Time
            </h3>
            <p class="text-gray-400">
                Let our app do the work of organizing your music for you
            </p>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        if (SpotifyAuthSessionManager.IsAuthenticated())
        {
            NavigationManager.NavigateTo(uri: "/playlists");
        }
    }
}
