@page "/counter"
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<div class="p-8">
    <div class="max-w-2xl mx-auto">
        <div class="text-center">
            <h1 class="text-3xl font-bold text-white mb-8 outline-none">
                Counter
            </h1>

            <div class="mb-8">
                <div class="text-6xl font-bold text-blue-500 mb-2 transition-all duration-300 transform @(_currentCount > 0 ? "scale-110" : "")">
                    @_currentCount
                </div>
                <p class="text-gray-400 text-lg" role="status">
                    Current count
                </p>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <button @onclick="IncrementCount"
                        class="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors duration-200 flex items-center gap-2 min-w-[160px] justify-center">
                    <svg class="w-5 h-5"
                         fill="none"
                         stroke="currentColor"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Increment
                </button>

                <button @onclick="ResetCount"
                        class="px-6 py-3 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-colors duration-200 flex items-center gap-2 min-w-[160px] justify-center">
                    <svg class="w-5 h-5"
                         fill="none"
                         stroke="currentColor"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    Reset
                </button>
            </div>

            <div class="mt-8 text-gray-400">
                <p class="text-sm">
                    Try clicking the increment button to increase the counter.
                    <br/>Use the reset button to start over.
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    private int _currentCount = 0;

    private void IncrementCount() => _currentCount++;

    private void ResetCount() => _currentCount = 0;

}
